---
import "@fontsource/noto-sans-mono"; 
const { date, mono } = Astro.props;
---

<time class="fmtdate" datetime={date.toISOString()}>
	{
		date.toLocaleDateString('en-us', {
			year: 'numeric',
			month: 'short',
			day: '2-digit',
		})
	}
</time>
{mono && <style>
.fmtdate {
	font-family: "Noto Sans Mono";
	color: grey
}
</style>
}
